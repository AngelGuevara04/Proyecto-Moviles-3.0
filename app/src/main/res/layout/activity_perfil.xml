<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#F4F7F6"
    tools:context=".presentation.main.PerfilActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp">

        <TextView
            android:id="@+id/textViewTituloPerfil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mi Perfil"
            android:textSize="34sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/textViewBienvenido"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            tools:text="¡Bienvenido, Juan!"
            android:textSize="16sp"
            android:textColor="@android:color/darker_gray"
            app:layout_constraintTop_toBottomOf="@id/textViewTituloPerfil"
            app:layout_constraintStart_toStartOf="parent" />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardAvatar"
            android:layout_width="120dp"
            android:layout_height="120dp"
            app:cardCornerRadius="60dp"
            app:cardElevation="4dp"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@id/textViewBienvenido"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <ImageView
                android:id="@+id/imageViewAvatar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:contentDescription="Foto de perfil"
                android:background="#E0E0E0"
                tools:src="@tools:sample/avatars" />
        </com.google.android.material.card.MaterialCardView>

        <TextView
            android:id="@+id/textViewNombreCompleto"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            tools:text="Juan Pérez González"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:textAlignment="center"
            android:layout_marginTop="16dp"
            android:layout_marginHorizontal="16dp"
            app:layout_constraintTop_toBottomOf="@id/cardAvatar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/textViewEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="juan.perez@correo.com"
            android:textSize="16sp"
            android:textColor="@android:color/darker_gray"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@id/textViewNombreCompleto"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />
            
        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonEditarPerfil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Editar Información"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:padding="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/textViewEmail"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardDetalles"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="2dp"
            app:cardUseCompatPadding="true"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/buttonEditarPerfil"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <!-- Detalles del usuario -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:baselineAligned="false">
                    
                    <LinearLayout
                         android:layout_width="0dp"
                         android:layout_height="wrap_content"
                         android:layout_weight="1"
                         android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="TELÉFONO"
                            android:textSize="10sp"
                            android:textStyle="bold"
                            android:textColor="#007BFF" />
                        <TextView
                            android:id="@+id/textViewTelefono"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:text="555-1234"
                            android:textSize="14sp"
                            android:textColor="@android:color/black"/>
                    </LinearLayout>
                    
                    <LinearLayout
                         android:layout_width="0dp"
                         android:layout_height="wrap_content"
                         android:layout_weight="1"
                         android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="EDAD"
                            android:textSize="10sp"
                            android:textStyle="bold"
                            android:textColor="#007BFF" />
                        <TextView
                            android:id="@+id/textViewEdad"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:text="30"
                            android:textSize="14sp"
                            android:textColor="@android:color/black"/>
                    </LinearLayout>
                </LinearLayout>
                
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="12dp"
                    android:baselineAligned="false">
                    
                    <LinearLayout
                         android:layout_width="0dp"
                         android:layout_height="wrap_content"
                         android:layout_weight="1"
                         android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="SEXO"
                            android:textSize="10sp"
                            android:textStyle="bold"
                            android:textColor="#007BFF" />
                        <TextView
                            android:id="@+id/textViewSexo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:text="Masculino"
                            android:textSize="14sp"
                            android:textColor="@android:color/black"/>
                    </LinearLayout>
                    
                    <LinearLayout
                         android:layout_width="0dp"
                         android:layout_height="wrap_content"
                         android:layout_weight="1"
                         android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="MIEMBRO DESDE"
                            android:textSize="10sp"
                            android:textStyle="bold"
                            android:textColor="#007BFF" />
                        <TextView
                            android:id="@+id/textViewMiembroDesde"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:text="Ene 2023"
                            android:textSize="14sp"
                            android:textColor="@android:color/black"/>
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>
        
        <!-- Contenedor de Pestañas -->
        <LinearLayout
            android:id="@+id/tabsContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@id/cardDetalles"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">
            
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnTabFavoritos"
                style="@style/Widget.MaterialComponents.Button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Favoritos"
                android:layout_marginEnd="4dp"
                app:cornerRadius="20dp"/>
                
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnTabPujas"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Mis Pujas"
                android:layout_marginStart="4dp"
                app:cornerRadius="20dp"/>
        </LinearLayout>

        <!-- Lista Dinámica -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewListas"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:nestedScrollingEnabled="false"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tabsContainer" />

        <!-- Mensaje Vacío -->
        <TextView
            android:id="@+id/textViewListaVacia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No hay elementos para mostrar"
            android:textSize="14sp"
            android:textColor="@android:color/darker_gray"
            android:layout_marginTop="32dp"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@+id/tabsContainer"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/textViewIrMenuInicio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Volver al menú"
            android:textSize="16sp"
            android:textColor="#007BFF"
            android:padding="8dp"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackground"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="16dp"
            app:layout_constraintTop_toBottomOf="@id/recyclerViewListas"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>