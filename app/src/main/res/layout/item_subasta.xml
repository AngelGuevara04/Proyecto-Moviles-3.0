<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="8dp"
    android:layout_marginVertical="8dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="4dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imageViewProducto"
            android:layout_width="0dp"
            android:layout_height="160dp"
            android:scaleType="centerCrop"
            android:background="#E0E0E0"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:src="@tools:sample/backgrounds/scenic"
            android:contentDescription="Imagen del producto en subasta" />

        <TextView
            android:id="@+id/textViewTituloProducto"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginHorizontal="16dp"
            tools:text="Guitarra ElÃ©ctrica Fender"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            app:layout_constraintTop_toBottomOf="@id/imageViewProducto"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/labelPujaActual"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PUJA ACTUAL"
            android:textSize="12sp"
            android:textColor="#007BFF"
            android:textStyle="bold"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/textViewTituloProducto"
            app:layout_constraintStart_toStartOf="@id/textViewTituloProducto" />

        <TextView
            android:id="@+id/textViewPujaActual"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="$8,500.00 MXN"
            android:textSize="20sp"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/labelPujaActual"
            app:layout_constraintStart_toStartOf="@id/labelPujaActual" />

        <TextView
            android:id="@+id/labelTiempoRestante"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TIEMPO RESTANTE"
            android:textSize="12sp"
            android:textColor="@android:color/darker_gray"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="@id/labelPujaActual"
            app:layout_constraintEnd_toEndOf="@id/textViewTituloProducto" />

        <TextView
            android:id="@+id/textViewTiempoRestante"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="2h 15m"
            android:textSize="20sp"
            android:textColor="@android:color/holo_red_dark"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/labelTiempoRestante"
            app:layout_constraintEnd_toEndOf="@id/labelTiempoRestante" />

        <View
            android:id="@+id/divider"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="#EEE"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/textViewPujaActual"
            app:layout_constraintStart_toStartOf="@id/textViewTituloProducto"
            app:layout_constraintEnd_toEndOf="@id/textViewTituloProducto"/>

        <TextView
            android:id="@+id/textViewPujar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="VER SUBASTA"
            android:textColor="#007BFF"
            android:textStyle="bold"
            android:padding="16dp"
            android:background="?attr/selectableItemBackground"
            app:layout_constraintTop_toBottomOf="@id/divider"
            app:layout_constraintEnd_toEndOf="@id/textViewTituloProducto"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>