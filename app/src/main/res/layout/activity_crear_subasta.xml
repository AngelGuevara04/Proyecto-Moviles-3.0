<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#F4F7F6"
    tools:context=".presentation.main.CrearSubastaActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp">

        <TextView
            android:id="@+id/textViewTituloCrear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="36dp"
            android:text="Nueva Subasta"
            android:textSize="34sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/textViewSubtituloCrear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Completa los detalles del producto"
            android:textSize="16sp"
            android:textColor="@android:color/darker_gray"
            app:layout_constraintTop_toBottomOf="@id/textViewTituloCrear"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- Botón para subir imagen -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonSubirImagen"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_marginTop="32dp"
            android:text="Tocar para subir imagen"
            app:icon="@drawable/ic_baseline_add_photo_alternate_24"
            app:iconGravity="textTop"
            app:iconPadding="8dp"
            app:strokeColor="@color/material_on_surface_disabled"
            app:strokeWidth="2dp"
            android:textColor="@android:color/darker_gray"
            app:cornerRadius="16dp"
            app:layout_constraintTop_toBottomOf="@id/textViewSubtituloCrear"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- Campos de Texto para la subasta -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputLayoutTitulo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:hint="Título del producto"
            app:layout_constraintTop_toBottomOf="@id/buttonSubirImagen"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editTextTitulo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textCapSentences"
                android:textSize="15sp"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputLayoutPuja"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:hint="Puja inicial (ej. 1500.00)"
            app:prefixText="$"
            app:layout_constraintTop_toBottomOf="@id/textInputLayoutTitulo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editTextPujaInicial"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:textSize="15sp" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputLayoutTiempo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:hint="Tiempo restante (ej. 2d 5h)"
            app:layout_constraintTop_toBottomOf="@id/textInputLayoutPuja"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editTextTiempo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:textSize="15sp" />
        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonPublicarSubasta"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Publicar Subasta"
            android:padding="12dp"
            app:cornerRadius="16dp"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@id/textInputLayoutTiempo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/textViewCancelar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancelar"
            android:textColor="#007BFF"
            android:textSize="16sp"
            android:padding="8dp"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackground"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@id/buttonPublicarSubasta"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>